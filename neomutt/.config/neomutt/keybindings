# vim: filetype=neomuttrc

set my_archive = "+Archive"

# Access mail accounts
macro index,pager <f2> '<sync-mailbox><enter-command>source ~/.config/neomutt/accounts/outlook<enter><change-folder>!<enter>'
macro index,pager <f3> '<sync-mailbox><enter-command>source ~/.config/neomutt/accounts/gmail<enter><change-folder>!<enter>'
macro index,pager <f4> '<sync-mailbox><enter-command>source ~/.config/neomutt/accounts/stat-lu<enter><change-folder>!<enter>'
macro index,pager <f5> '<sync-mailbox><enter-command>source ~/.config/neomutt/accounts/student-lu<enter><change-folder>!<enter>'

# Navigation

bind generic             z         noop
bind index,pager,attach  g         noop
bind index,pager         d         noop
bind index,pager         s         noop
# bind index,pager         c         noop
bind generic,pager       t         noop
bind index               h         noop

bind browser                     h         goto-parent
bind pager,attach                h         exit
bind browser                     l         select-entry
bind index                       l         display-message
bind pager                       j         next-line
bind pager                       k         previous-line
bind attach                      <return>  view-mailcap
bind generic,index,pager         \Cf       next-page
bind generic,index,pager         \Cb       previous-page
bind generic,index,pager,browser \Cd       half-down
bind generic,index,pager,browser \Cu       half-up
bind generic                     gg        first-entry
bind generic,index               G         last-entry
bind pager                       gg        top
bind pager                       G         bottom
bind generic,index,pager         \Cd       half-down
bind generic,index,pager         \Cu       half-up
bind generic                     zt        current-top
bind generic                     zz        current-middle
bind generic                     zb        current-bottom
bind index                       za        collapse-thread
bind index                       zA        collapse-all
bind index,pager                 N         search-opposite
bind index                       <Backtab> previous-new-then-unread
bind index,pager                 @         compose-to-sender
bind index,pager                 B         sidebar-toggle-visible

# Actions
bind  index,pager    R     group-reply
macro index,pager    dd    <delete-message>                              "move message to trash"
macro index,pager    dat   <delete-thread>                               "move thread  to trash"
